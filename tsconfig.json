{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",  
      "moduleResolution": "node",
      "lib": ["es5","es2015", "dom"],
      "strict": true,
      "declaration": true,
      "outDir":"./lib",
      "types": [
        "node",
        "webpack-env"
      ],
      "esModuleInterop": true,
      // "sourceMap": true ,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*.ts", "src/*.ts"],
    "exclude": [
      "lib",
      "node_modules"
    ]
}